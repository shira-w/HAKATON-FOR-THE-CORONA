<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="0dp"
    android:paddingRight="30dp"
    android:paddingBottom="50dp"
    android:saveEnabled="false"
    tools:context=".RoutsActivity">


    <Button
        android:id="@+id/btnAddGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:clickable="true"
        android:text="הוספת קבוצה"
        android:background="#03DAC5"/>

    <Button
        android:id="@+id/btnUpdateId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAddGroupId"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:clickable="true"
        android:text="עדכון"
        android:background="#03DAC5"/>

    <Button
        android:id="@+id/btnStatusId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdateId"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:clickable="true"
        android:text="סטאטוס"
        android:background="#03DAC5"/>

</RelativeLayout>