<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:saveEnabled="false"
    android:background="#241332"
    tools:context=".UpdatesickActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/back_sick" />

    <TextView
        android:id="@+id/txvTitleId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עדכון סטטוס חולה"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="200dp"
        android:textColor="#ffff"
        />

    <EditText
        android:id="@+id/edtSickId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvTitleId"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="95dp"
        android:focusable="true"
        android:hint="תעודת זהות"
        android:textSize="20dp"
        android:textColorHint="#ffff" />

    <Button
        android:id="@+id/btnUpdateSickID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="540dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:background="@drawable/mybutton"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:text="עדכון"
        android:textSize="20dp"
        />



</RelativeLayout>